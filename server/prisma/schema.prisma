datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  Boolean    @default(false)
  categories Category[] @relation("UserCategory")
  games      Game[]     @relation("UserGame")
}

model Game {
  id          String     @id @default(uuid())
  name        String
  description String
  imageUrl    String
  userId      String
  releaseDate DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   Boolean    @default(false)
  user        User       @relation("UserGame", fields: [userId], references: [id])
  categories  Category[] @relation("CategoryGame")
}

model Category {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   Boolean  @default(false)
  games       Game[]   @relation("CategoryGame")
  user        User     @relation("UserCategory", fields: [userId], references: [id])
}
