datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  DateTime?
  categories Category[] @relation("UserCategory")
  games      Game[]     @relation("UserGame")
  platforms  Platform[] @relation("UserPlatform")
  dashboard  Dashboard?
}

model Game {
  id          String     @id @default(uuid())
  userId      String
  name        String
  description String
  imageUrl    String
  price       Int        @default(0)
  rating      Int        @default(0)
  status      String     @default("none")
  favorite    Boolean    @default(false)
  acquisDate  DateTime
  finishDate  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
  user        User       @relation("UserGame", fields: [userId], references: [id])
  categories  Category[] @relation("CategoryGame")
  platforms   Platform[] @relation("PlatformGame")
}

model Category {
  id          String    @id @default(uuid())
  userId      String
  name        String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  user        User      @relation("UserCategory", fields: [userId], references: [id])
  games       Game[]    @relation("CategoryGame")
}

model Platform {
  id         String    @id @default(uuid())
  userId     String
  name       String
  company    String
  acquisDate DateTime
  imageUrl   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  user       User      @relation("UserPlatform", fields: [userId], references: [id])
  games      Game[]    @relation("PlatformGame")
}

model Dashboard {
  id             String   @id @default(uuid())
  userId         String   @unique
  totalPrice     Float      @default(0)
  topPlatform    String?
  topCategory    String?
  avgRating      Float    @default(0)
  totalFavorites Int      @default(0)
  totalAbandoned Int      @default(0)
  totalDone      Int      @default(0)
  totalPlaying   Int      @default(0)
  lastUpdated    DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
}
